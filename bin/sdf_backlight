#! /bin/bash

if [ "$1" == 'low' ]; then
  echo 100 | tee /sys/class/backlight/intel_backlight/brightness
elif [ "$1" == 'med' ]; then
  echo 500 | tee /sys/class/backlight/intel_backlight/brightness
else
  cat /sys/class/backlight/intel_backlight/max_brightness | tee /sys/class/backlight/intel_backlight/brightness
fi
