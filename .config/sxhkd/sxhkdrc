#
# wm independent hotkeys
#

# terminal emulator
super + Return
	urxvt

# program launcher
super + space
	dmenu_run -y 1000 -x 1000 -w 2000 -fn xft:Inconsolata:Medium:size=14 -h 100 -l 4

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit bspwm
super + alt + Escape
	bspc quit

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {x,y,z}
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous node
super + {_,shift + }c
	bspc node -f {next,prev}

# focus the next/previous desktop
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
#super + {Left,Down,Up,Right}
#	bspc node -v {-20 0,0 20,0 -20,20 0}


##################
## END https://github.com/baskerville/bspwm/blob/master/examples/sxhkdrc
##################

# focus the next/previous desktop
super + shift + bracket{left,right}
	bspc monitor -f {prev,next}

# SDF: focus the node in the given direction
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# SDF: preselect the direction
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# SDF: expand the tiled space in the given direction
super + alt + {Left,Down,Up,Right}
	bspc node {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# SDF: contract the tiled space in the given direction
super + alt + shift + {Left,Down,Up,Right}
	bspc node {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# start move/resize
#super + button{1-3}
#	; bspc pointer -g {move,resize_side,resize_corner}

# end move/resize
#super + @button{1-3}
#	bspc pointer -u

# rotate windows
super + {_, shift +} r
	bspc node @focused:/ -R {90, -90}

super + shift + B
	bspc node @focused:/ -E

super + {_, shift + } a
  bspc node @focused:/ -F {horizontal,vertical}

# media keys
{XF86AudioPrev, XF86AudioPlay, XF86AudioNext}
  mpc {prev, toggle, next}

{XF86AudioRaiseVolume, XF86AudioLowerVolume, XF86AudioMute}
	sdf_volume {up, down, toggle}

# focus the next/previous node on this desktop
super + {_,shift + } slash
	bspc node @focused:/ -C {forward,backward}

# auto detect prefererred monitor layout
super + F1
	sdf_monitors

# internal monitor
super + shift + F1
	xrandr --output eDP1 --auto --output DP1  --off

# external monitor
super + shift + F2
	xrandr --output DP1 --auto --output eDP1  --off

# App shortcuts

## Slack
super + ctrl + F1
	slack &

## Work Inbox
super + ctrl + F2
	 google-chrome-stable --profile-directory="Default" --app=https://inbox.google.com &

## Work Calendar
super + ctrl + F3
	 google-chrome-stable --profile-directory="Default" --app=https://calendar.google.com &

## Work Calendar
super + ctrl + F4
	 google-chrome-stable --profile-directory="Profile 1" --app=https://trello.com/b/p0smG8Ny/for &

## Work chrome
super + ctrl + F5
	 google-chrome-stable --profile-directory="Default" &; bspc desktop -f '^3'

## My chrome
super + ctrl + F6
	 google-chrome-stable --profile-directory="Profile 1" &; bspc desktop -f '^3'

## Edit SDF Config
super + ctrl + F12
	atom $SDF_PATH &; bspc desktop -f '^8'

# Screen lock
ctrl + alt + l
	gnome-screensaver-command -l || slock

# restart panel
super + ctrl + Escape
	killall -9 panel lemonbar; ~/.config/bspwm/panel &
